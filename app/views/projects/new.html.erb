<div class="container">
  <div class="row">
    <div class="col-sm-22 col-lg-16 mx-auto">
      <div class="prj-ListHeader">
        <h1 class="prj-ListHeader_Title">
          <%=t '.title' %>
        </h1>
        <hr class="prj-ListHeader_Divider">
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-22 col-lg-16 mx-auto">
      <div class="prj-Create">
        <%= form_with model: @form, scope: :form, url: projects_url, local: true do |f| %>
          <div class="form-group">
            <%= f.label :name, class: 'frm-Label' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :description, class: 'frm-Label' %>
            <%= f.text_field :description, class: 'form-control' %>
          </div>
          <div class="frm-Actions">
            <%= f.button t('helpers.submit.create'), class: 'btn btn-success', data: loading_indicator %>
            <%= link_to t('navs.cancel'), projects_url, class: 'frm-Actions_Cancel' %>
          </div>
        <% end -%>
      </div>
    </div>
  </div>
</div>
