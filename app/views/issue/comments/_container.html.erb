<div class="dsc-Body_CommentWrapper" data-channel="issue-comments" data-issue-id="<%= issue.id %>">
  <h3 class="dsc-Comment_Title">
    <%=t '.title' %>
  </h3>
  <% if issue.closed? -%>
    <%= render partial: 'issue/comments/archived_list', locals: { comments: issue.comments } %>
  <% else -%>
    <%= render partial: 'issue/comments/list', locals: { comments: issue.comments } %>
    <%= render partial: 'issue/comments/form', locals: { form: form } %>
  <% end -%>
</div>
