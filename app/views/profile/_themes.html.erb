<div class="usr-EditAvatar_Themes" id="app_themes">
  <% UserTheme.all.each do |theme| -%>
    <%= form_with url: profile_theme_url, method: :patch do |f| %>
      <%= hidden_field_tag 'form[theme]', theme %>
      <%= f.button class: "usr-EditAvatar_Theme usr-Theme-#{theme}", id: "app_theme_#{theme}" do %>
        <i class="usr-EditAvatar_ThemeOption<%= current_user.theme == theme ? ' usr-EditAvatar_ThemeOption-selected' : '' %>"></i>
      <% end -%>
    <% end -%>
  <% end -%>
</div>
