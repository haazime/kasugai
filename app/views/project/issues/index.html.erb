<% breadcrumb :project_issues, current_project %>
<div class="row">
  <div class="col-sm-22 col-lg-20 mx-auto">
    <div class="issl-Body">
      <div class="row">
        <div class="issl-Nav_Add">
          <%= link_to t('.new'), new_project_issue_url(current_project), class: 'sw-ButtonLink' %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-22 col-lg-20 offset-lg-1">
          <%= render partial: 'list', locals: { issues: @issue_list.issues } %>
        </div>
      </div>
    </div>
  </div>
</div>
<% if @closed_issues_count > 0 -%>
  <div class="row">
    <div class="col-sm-22 col-lg-20 mx-auto">
      <div class="issl-Nav_Closed">
        <%= link_to t('.closed', count: @closed_issues_count), project_closed_issues_url(current_project), class: 'issl-Nav_ClosedLink' %>
      </div>
    </div>
  </div>
<% end -%>
