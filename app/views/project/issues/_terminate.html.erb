<div class="row">
  <div class="col-sm-22 col-lg-18 mx-auto">
    <div class="dsc-Terminate">
      <div class="dsc-Terminate_Option">
        <p class="iss-Terminate_Description">
          <%=t '.help_archive' %>
        </p>
        <%= form_with url: project_archived_issues_url(current_project) do |f| %>
          <%= hidden_field_tag :issue_id, current_issue.id %>
          <%= f.button t('.archive'), data: { confirm: t('.confirm_archive', title: current_issue.title) }, class: 'iss-ArchiveLink' %>
        <% end -%>
      </div>
      <div class="dsc-Terminate_Option">
        <p class="iss-Terminate_Description">
          <%=t '.help_delete' %>
        </p>
        <%= link_to t('.delete'), project_issue_path(current_project, current_issue), method: :delete, data: { confirm: t('.confirm_delete') }, class: 'iss-DeleteLink' %>
      </div>
    </div>
  </div>
</div>
